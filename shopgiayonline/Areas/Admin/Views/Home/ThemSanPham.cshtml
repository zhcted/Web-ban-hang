            <input type="text" name="ChatLieu" id="inputChatLieu" />
            <label for="inputChatLieu">Chất liệu sản phẩm ....</label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-label-group">
            <input type="text" name="Mota" id="inputmota" class="form-control" />
            <label for="inputmota">Mô tả Hot Deals ....</label>
