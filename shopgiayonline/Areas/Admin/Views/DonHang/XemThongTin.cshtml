
@{
    ViewBag.Title = "XemThongTin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using shopgiayonline.Framework;
@model List<DONHANG>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i> Thông tin của đơn hàng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Mã khách hàng</th>
                        <th>Ngày xuất đơn</th>
                        <th>Xem chi tiết</th>
                        <th>Hủy đơn hàng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Mã khách hàng</th>
                        <th>Ngày xuất đơn</th>
                        <th>Xem chi tiết</th>
                        <th>Hủy đơn hàng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.MaDH</td>
                            <td>@item.MaKH</td>
                            <td>@item.NGAYDH</td>
                            <td><a href="~/Admin/DonHang/XemChiTiet?ma=@item.MaDH" class="btn btn-light">x</a></td>
                            <td><a href="~/Admin/DonHang/XoaDonHang?ma=@item.MaDH" class="btn btn-light">x</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


