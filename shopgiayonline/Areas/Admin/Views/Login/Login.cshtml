
@{
    Layout = null;
}

@model shopgiayonline.Areas.Admin.Models.LoginModel
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title> Admin - Login</title>

    <!-- Bootstrap core CSS-->
    <link href="~/Assets/Admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/Assets/Admin/css/sb-admin.css" rel="stylesheet">
</head>

<body class="bg-dark">

    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.UserAdmin, new { @id = "inputUser", @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
                            <label for="inputUser">Tên đăng nhập Admin ....</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.TextBoxFor(model => model.MatKhauAdmin, new { @id = "inputPassword", @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                            <label for="inputPassword">Password</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.RememberMe)
                                Remember Password
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="~/Admin/Login/RegisterAdmin">Register an Account</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>