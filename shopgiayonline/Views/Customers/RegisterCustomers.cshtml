            </form>
            <div class="text-center">

            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $("#formValidation").validate({
            
            rules: {
                TenKH: "required",
                EmailKH: {
                    required: true,
                    email: true
                },
                MatKhauKH: {
                    required: true

                },
                reMatKhauKH: {
                    required: true,
                    equalTo: "#inputMatKhauKH"
                },
                DiaChiKH: {
                    required: true
                },
                SDTKH: {
                    required: true
                }
            },
            messages: {
                TenKH: "Vui lòng nhập tên khách hàng",
                EmailKH: {
                    required: "Vui lòng nhập Email",
                    email: "Email không đúng định dạng!"
                },
                MatKhauKH: "Vui lòng nhập mật khẩu",
                reMatKhauKH: {
                    required: "Vui lòng nhập lại mật khẩu",
                    equalTo: "Mật khẩu không trùng khớp"
                },
                DiaChiKH: "Không được để trống!",
                SDTKH: "Không được để trống!"
            }
        });
    });
</script>